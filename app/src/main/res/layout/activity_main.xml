<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/shieldIconMain"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_shield"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_title"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_description"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/scanButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/scan_apps_button"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/primary_red"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        app:icon="@drawable/ic_shield"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/antivirusButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/antivirus_scan"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/primary_red"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/scanButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:icon="@android:drawable/ic_menu_search"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fileCleanerButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/file_cleaner"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/primary_red"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/antivirusButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chatbotButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="ðŸ¤– Security Assistant"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/primary_red"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/fileCleanerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:icon="@android:drawable/ic_menu_recent_history"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settingsButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="âš™ï¸ Settings &amp; APIs"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/primary_red"
        app:cornerRadius="30dp"
        app:icon="@android:drawable/ic_menu_preferences"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatbotButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

