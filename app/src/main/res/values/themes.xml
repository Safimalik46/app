<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme with Material Design 3 and Cybersecurity Colors -->
    <style name="Theme.AppDetector" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary_red</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/background_white</item>
        <item name="colorOnBackground">@color/text_black</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_black</item>
        <item name="android:windowBackground">@color/background_white</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.AppDetector.Splash" parent="Theme.AppDetector">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>

